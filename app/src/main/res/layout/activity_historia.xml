<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.historia">

    <ScrollView
        android:id="@+id/ScrollView01"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image1noticia"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                app:srcCompat="@drawable/historia1" />

            <TextView
                android:id="@+id/text1noticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:text="@string/parrafo_primero"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/image2noticia"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:srcCompat="@drawable/historia2" />

            <TextView
                android:id="@+id/text2noticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="0dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:text="@string/parrafo_segundo"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

            <ImageView
                android:id="@+id/image3noticia"
                android:layout_width="match_parent"
                android:layout_height="290dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                app:srcCompat="@drawable/historia3" />

            <TextView
                android:id="@+id/text3noticia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="10dp"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="0dp"
                android:text="@string/parrafo_tercero"
                android:textAlignment="center"
                android:textColor="@color/colorPrimary"
                android:textSize="20dp" />

        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>